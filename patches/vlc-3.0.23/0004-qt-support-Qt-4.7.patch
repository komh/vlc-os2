From 9ce603a27820e77c9bbfb70412ddaa5ca15bf6b8 Mon Sep 17 00:00:00 2001
From: KO Myung-Hun <komh@chollian.net>
Date: Sat, 2 Apr 2016 16:22:26 +0900
Subject: [PATCH 004/120] qt: support Qt 4.7

OS/2 still uses Qt 4.7.3.
---
 configure.ac          | 16 +---------------
 modules/gui/qt/qt.hpp |  4 ++--
 2 files changed, 3 insertions(+), 17 deletions(-)

diff --git a/configure.ac b/configure.ac
index fbd0964077..e196396607 100644
--- a/configure.ac
+++ b/configure.ac
@@ -3852,20 +3852,7 @@ AC_ARG_ENABLE(qt, [
 ])
 have_qt5_x11="no"
 AS_IF([test "${enable_qt}" != "no"], [
-  PKG_CHECK_MODULES([QT], [Qt5Core >= 5.5.0 Qt5Widgets Qt5Gui Qt5Svg], [
-      PKG_CHECK_MODULES([QT5_X11], [Qt5X11Extras], [
-          have_qt5_x11="yes"
-      ],[
-          AC_MSG_WARN([Not building Qt Interface with X11 helpers.])
-      ])
-      QT_PATH="$(eval $PKG_CONFIG --variable=exec_prefix Qt5Core)"
-      QT_HOST_PATH="$(eval $PKG_CONFIG --variable=host_bins Qt5Core)"
-      QT_VERSION="$(eval $PKG_CONFIG --modversion Qt5Gui)"
-      AC_PATH_PROGS(MOC, [moc-qt5 moc], moc, ["${QT_HOST_PATH}" "${QT_PATH}/bin"])
-      AC_PATH_PROGS(RCC, [rcc-qt5 rcc], rcc, ["${QT_HOST_PATH}" "${QT_PATH}/bin"])
-      AC_PATH_PROGS(UIC, [uic-qt5 uic], uic, ["${QT_HOST_PATH}" "${QT_PATH}/bin"])
-    ], [
-      PKG_CHECK_MODULES([QT], [QtCore QtGui >= 4.8.0],, [
+      PKG_CHECK_MODULES([QT], [QtCore QtGui QtSvg >= 4.7.0],, [
         AS_IF([test -n "${enable_qt}"],[
           AC_MSG_ERROR([${QT_PKG_ERRORS}.])
         ],[
@@ -3877,7 +3864,6 @@ AS_IF([test "${enable_qt}" != "no"], [
       AC_PATH_PROGS(MOC, [moc-qt4 moc], moc, ["${QT_PATH}/bin"])
       AC_PATH_PROG(RCC, rcc, rcc, ["${QT_PATH}/bin"])
       AC_PATH_PROGS(UIC, [uic-qt4 uic], uic, ["${QT_PATH}/bin"])
-    ])
 ])
 AS_IF([test "${enable_qt}" != "no"], [
   ALIASES="${ALIASES} qvlc"
diff --git a/modules/gui/qt/qt.hpp b/modules/gui/qt/qt.hpp
index 8efaae7496..27a3e3c981 100644
--- a/modules/gui/qt/qt.hpp
+++ b/modules/gui/qt/qt.hpp
@@ -43,8 +43,8 @@
 #include <QString>
 #include <QUrl>
 
-#if ( QT_VERSION < 0x040800 )
-# error Update your Qt version to at least 4.8.0
+#if ( QT_VERSION < 0x040700 )
+# error Update your Qt version to at least 4.7.0
 #endif
 
 #define HAS_QT5  ( QT_VERSION >= 0x050000 )
-- 
